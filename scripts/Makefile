# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Core_config = debug
  CoreTests_config = debug
  Extensions_config = debug
endif
ifeq ($(config),release)
  Core_config = release
  CoreTests_config = release
  Extensions_config = release
endif

PROJECTS := Core CoreTests Extensions

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Core:
ifneq (,$(Core_config))
	@echo "==== Building Core ($(Core_config)) ===="
	@${MAKE} --no-print-directory -C ../core/scripts -f Core.make config=$(Core_config)
endif

CoreTests: Core
ifneq (,$(CoreTests_config))
	@echo "==== Building CoreTests ($(CoreTests_config)) ===="
	@${MAKE} --no-print-directory -C ../core/scripts -f CoreTests.make config=$(CoreTests_config)
endif

Extensions:
ifneq (,$(Extensions_config))
	@echo "==== Building Extensions ($(Extensions_config)) ===="
	@${MAKE} --no-print-directory -C ../extensions/scripts -f Makefile config=$(Extensions_config)
endif

clean:
	@${MAKE} --no-print-directory -C ../core/scripts -f Core.make clean
	@${MAKE} --no-print-directory -C ../core/scripts -f CoreTests.make clean
	@${MAKE} --no-print-directory -C ../extensions/scripts -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Core"
	@echo "   CoreTests"
	@echo "   Extensions"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"